<h1>Listing Animal Matches</h1>

<table>
  <thead>
    <tr>
      <th>Animal</th>
      <th>Potential mate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @animal_matches.each do |animal_match| %>
      <tr>
        <td><%= animal_match.animal %></td>
        <td><%= animal_match.potential_mate %></td>
        <td><%= link_to 'Show', animal_match %></td>
        <td><%= link_to 'Edit', edit_animal_match_path(animal_match) %></td>
        <td><%= link_to 'Destroy', animal_match, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Animal match', new_animal_match_path %>
