<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">
      <%= @animal.name %>
      <small> from <%= @animal.facility.name %></small>
    </h1>
  </div>
</div>
<div class="row">
  <div class="col-md-8">
    <%= image_tag @animal.pictures.first.image.url(:portfolio_large), class: "img-responsive" if @animal.pictures.first.present? %>
    <div>
<link rel="stylesheet" href="https://cdn.datatables.net/1.10.12/css/jquery.dataTables.min.css">
<script src="https://cdn.datatables.net/1.10.12/js/jquery.dataTables.min.js"></script>
<script src="http://code.jquery.com/mobile/1.4.5/jquery.mobile-1.4.5.min.js"></script>
  <h3>Featured Potential <%=@animal.species.name %> Mate</h3>
  <%= form_tag animal_matches_path(animal_id: 501,potential_match_id: 1), method: :post, remote: true, animal_id: "match_animal_form" %>
  
<div data-role="page" id="pageone">
  <div data-role="main" class="ui-content">
     
        <%= image_tag @animal.pictures.first.image.url(:portfolio_large), class: "img-responsive antlr" if @animal.pictures.first.present? %>
        
  </div>
  </div>

    <h1> Close by Matches </h1>
    <h2> filters </h2>

    <table>
    <thead>
      <th>Name</th>
      <th>Facility Name</th>
      <th>Age</th>
      <th>Sire</th>
      <th>Dam</th>
      <th>Reproductive Status</th>
      <th>Age</th>
      <th>Facility Name</th>
    </thead>
    <tbody>
    <% @nearby_animals.each do |n| %>
      <tr age="<%=n.age%>">
        <td> <%= link_to n.name, animal_path(n.id)%> </td>
        <td><%=n.facility.name %></td>
        <td><%=n.age%></td>
        <td><%=n.sire %></td>
        <td><%=n.dam %></td>
        <td><%=n.reproductive_status_id %></td>
        <td><%=n.age%></td>
        <td><%=n.facility.name %></td>
      </tr>
    <% end %>
    </tbody>
    </table>
    </div>
  </div>
  <div class="col-md-4">
    <h3>Description</h3>
    <p>
      Species: <%= @animal.species.name %>
      <br/>
      Date of Birth: <%= @animal.date_of_birth %>
      <br/>
      Studbook: <%= @animal.studbook %>
      <br/>
      Sire: <%= @animal.sire %>
      <br/>
      Dam: <%= @animal.dam %>
      <br/>
      Tag: <%= @animal.tag %>
      <br/>
      Comments: <%= @animal.comments %>
      <br/>
      Searchable: <%= @animal.searchable %>
    </p>

    <h3>Actions</h3>
    <p>
      <% if current_user.site_admin? %>
        <%= link_to 'Edit', edit_facility_animal_path(@facility, @animal) %> |
      <% end %>
      <%= link_to 'Back', facility_animals_path(@facility) %>
    </p>
  </div>
</div>
<div class="row">
  <div class="col-lg-12">
    <h3 class="page-header">More Images</h3>
  </div>
  <% @animal.pictures.each do |p| %>
    <div class="col-sm-3 col-xs-6">
      <%= image_tag p.image.url(:portfolio_small), class: "img-responsive" %>
    </div>
  <% end %>
</div>
