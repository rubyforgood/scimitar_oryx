<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">
      <%= @animal.name %>
      <small>from <%= @animal.facility.name %></small>
    </h1>
  </div>
</div>
<div class="row">
  <div class="col-md-8">
    <%= image_tag @animal.pictures.first.image.url(:portfolio_large), class: "img-responsive" if @animal.pictures.first.present? %>
  </div>
  <div class="col-md-4">
    <h3>Description</h3>
    <p>
      Date of Birth: <%= @animal.date_of_birth %>
      <br/>
      Studbook: <%= @animal.studbook %>
      <br/>
      Sire: <%= @animal.sire %>
      <br/>
      Dam: <%= @animal.dam %>
      <br/>
      Tag: <%= @animal.tag %>
      <br/>
      Comments: <%= @animal.comments %>
      <br/>
      Searchable: <%= @animal.searchable %>
    </p>
    <h3>Actions</h3>
    <p>
      <% if current_user.site_admin? %>
        <%= link_to 'Edit', edit_facility_animal_path(@facility, @animal) %> |
      <% end %>
      <%= link_to 'Back', facility_animals_path(@facility) %>
    </p>
  </div>
</div>
<div class="row">
  <div class="col-lg-12">
    <h3 class="page-header">More Images</h3>
  </div>
  <% @animal.pictures.each do |p| %>
    <div class="col-sm-3 col-xs-6">
      <%= image_tag p.image.url(:portfolio_small), class: "img-responsive" %>
    </div>
  <% end %>
</div>
